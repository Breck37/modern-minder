{
  "expo": {
    "name": "modern-minder",
    "slug": "modern-minder",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "modernminder",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bdotdev.modernminder",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Modern Minder needs microphone access for voice-to-text reminders.",
        "NSSpeechRecognitionUsageDescription": "Modern Minder uses speech recognition to create reminders from your voice.",
        "NSLocationWhenInUseUsageDescription": "Modern Minder uses your location to set the correct timezone for reminders.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.bdotdev.modernminder",
      "permissions": [
        "RECORD_AUDIO",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-notifications",
      "expo-sqlite",
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Modern Minder uses your location to set the correct timezone for reminders."
        }
      ],
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Modern Minder needs microphone access for voice-to-text reminders.",
          "speechRecognitionPermission": "Modern Minder uses speech recognition to create reminders from your voice."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "owner": "bdotdev",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/modern-minder"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": ""
      }
    }
  }
}
